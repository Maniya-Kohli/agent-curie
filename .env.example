# .env.example - 

# Core API Keys
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# SERPAPI_KEY=your_serpapi_key_here # Optional for web search

# ============================================================================
# TELEGRAM CONFIGURATION
# ============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# User Access Control (comma-separated user IDs, or "*" for all)
# Leave empty to allow all users
TELEGRAM_ALLOW_FROM=123456789,987654321

# Group Settings
TELEGRAM_GROUPS_ENABLED=true
TELEGRAM_REQUIRE_MENTION=true # Bot must be @mentioned in groups
TELEGRAM_GROUP_ALLOWLIST=*  # "*" allows all groups, or specify group IDs

# ============================================================================
# DISCORD CONFIGURATION
# ============================================================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# User Access Control
DISCORD_ALLOW_FROM=  # Empty = allow all

# DM Policy: "pairing" (auth required), "open" (anyone), "closed" (no DMs)
DISCORD_DM_POLICY=pairing

# Guild (Server) Settings
DISCORD_GROUPS_ENABLED=true
DISCORD_REQUIRE_MENTION=true # Bot must be @mentioned in servers
DISCORD_GUILD_ALLOWLIST=*  # Server IDs or "*"
DISCORD_GROUP_ALLOWLIST=  # Channel IDs for fine-grained control

